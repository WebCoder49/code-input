{
  "name": "@webcoder49/code-input",
  "version": "2.5.0",
  "description": "Fully customisable, editable syntax-highlighted textareas.",
  "browser": "code-input.js",
  "exports": {
    ".": {
      "import": {
        "default": "esm/code-input.mjs",
        "types": "esm/code-input.d.mts"
      }
    },
    "./templates/hljs": {
      "import": {
        "default": "esm/templates/hljs.mjs",
        "types": "esm/templates/hljs.d.mts"
      }
    },
    "./templates/prism": {
      "import": {
        "default": "esm/templates/prism.mjs",
        "types": "esm/templates/prism.d.mts"
      }
    },
    "./plugins/auto-close-brackets": {
      "import": {
        "default": "esm/plugins/auto-close-brackets.mjs",
        "types": "esm/plugins/auto-close-brackets.d.mts"
      }
    },
    "./plugins/autocomplete": {
      "import": {
        "default": "esm/plugins/autocomplete.mjs",
        "types": "esm/plugins/autocomplete.d.mts"
      }
    },
    "./plugins/autodetect": {
      "import": {
        "default": "esm/plugins/autodetect.mjs",
        "types": "esm/plugins/autodetect.d.mts"
      }
    },
    "./plugins/find-and-replace": {
      "import": {
        "default": "esm/plugins/find-and-replace.mjs",
        "types": "esm/plugins/find-and-replace.d.mts"
      }
    },
    "./plugins/go-to-line": {
      "import": {
        "default": "esm/plugins/go-to-line.mjs",
        "types": "esm/plugins/go-to-line.d.mts"
      }
    },
    "./plugins/indent": {
      "import": {
        "default": "esm/plugins/indent.mjs",
        "types": "esm/plugins/indent.d.mts"
      }
    },
    "./plugins/select-token-callbacks": {
      "import": {
        "default": "esm/plugins/select-token-callbacks.mjs",
        "types": "esm/plugins/select-token-callbacks.d.mts"
      }
    },
    "./plugins/special-chars": {
      "import": {
        "default": "esm/plugins/special-chars.mjs",
        "types": "esm/plugins/special-chars.d.mts"
      }
    },
    "./plugins/test": {
      "import": {
        "default": "esm/plugins/test.mjs",
        "types": "esm/plugins/test.d.mts"
      }
    }
  },
  "scripts": {
    "test": "echo \"This is a front-end library, not a Node library. Please see the README for how to use.\" && exit 1",
    "postinstall": "cd esm ; node generate.mjs ; cd .."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WebCoder49/code-input.git"
  },
  "keywords": [
    "front-end",
    "syntax",
    "highlight",
    "textarea",
    "editable",
    "web-components"
  ],
  "author": {
    "name": "WebCoder49",
    "email": "hi@webcoder49.dev",
    "url": "https://webcoder49.dev/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WebCoder49/code-input/issues"
  },
  "homepage": "https://github.com/WebCoder49/code-input#readme"
}
